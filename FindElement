#include <iostream>

using namespace std;

template<typename T>
void findElement(long row ,long column , T * matrixA , T element )
{
	//print matrix
	for(long i = 0 ; i < row ; ++ i)
	{
		for(long j = 0 ; j < column ; ++ j)
		{
			printf("%d " , matrixA[column * i  + j]);
		}
		printf("\n");
	}


	bool isExists = false;
	long i = 0;
	long j = column - 1;
	while(i < row && j >= 0 )
	{
		if(matrixA[column * i + j] > element)
			-- j;
		else if(matrixA[column * i + j] < element)
			++ i;
		else if(matrixA[column * i + j] == element)
		{
			printf("( %d , %d ) = %d \n" , i , j , element);
			isExists = true;
			-- j;
		}
	}

	if(!isExists)
		printf(" %d %s" , element , "is not exists!");
}

int main()
{
	int matrixA[5][6] = {
		{1 , 2 , 4 , 9  , 10 , 13},
		{3 , 5 , 8 , 11 , 13 , 16},
		{5 , 8 , 9 , 15 , 16 , 20},
		{8 , 10 , 12 , 17 , 19 , 23},
		{10 , 12 , 14 , 19  , 20 , 27}
	};

	findElement<int>(5, 6  , (int *)matrixA, 13);

	getchar();
	return 0;
}
